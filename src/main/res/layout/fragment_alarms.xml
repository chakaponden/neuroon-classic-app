                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:gravity="center" android:id="@+id/use_artificial_btn" android:background="@drawable/button_alarms_artificial_dawn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/use" android:layout_weight="1"/>
                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:gravity="center" android:id="@+id/dont_use_artificial_btn" android:background="@drawable/button_alarms_artificial_dawn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/dont_use" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:gravity="bottom" android:id="@+id/type_buttons_2" android:background="@drawable/bg_round_grey" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginRight="20dp" android:layout_marginBottom="8dp">
                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:gravity="center" android:id="@+id/dimmed_btn" android:background="@drawable/button_alarms_artificial_dawn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/dimmed" android:layout_weight="1"/>
                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:gravity="center" android:id="@+id/normal_btn" android:background="@drawable/button_alarms_artificial_dawn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/normal" android:layout_weight="1"/>
                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:gravity="center" android:id="@+id/bright_btn" android:background="@drawable/button_alarms_artificial_dawn" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/bright" android:layout_weight="1"/>
            </LinearLayout>
            <View android:id="@+id/divider3" style="@style/DrawerMenuDivider"/>
            <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" android:text="@string/automatic_sleep_start" android:drawableLeft="@drawable/sleep_feed" android:drawablePadding="4dp"/>
            <LinearLayout android:gravity="bottom" android:id="@+id/type_buttons_3" android:background="@drawable/bg_round_grey" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginRight="20dp" android:layout_marginBottom="8dp">
                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/button_switch_blue_text_color" android:gravity="center" android:id="@+id/automatic_sleep_on_btn" android:background="@drawable/button_switch_blue" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/use" android:layout_weight="1"/>
                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/button_switch_blue_text_color" android:gravity="center" android:id="@+id/automatic_sleep_off_btn" android:background="@drawable/button_switch_blue" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/dont_use" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
