                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/override_your_biorhythm_nwith_the_one_night_alarm" android:layout_toRightOf="@+id/one_day_alarm_icon" android:layout_below="@+id/one_day_alarm_title" android:lineSpacingExtra="4dp"/>
            </RelativeLayout>
            <View android:id="@+id/divider2" style="@style/DrawerMenuDivider"/>
            <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" android:text="@string/artificial_dawn" android:drawableLeft="@drawable/ic_artificial_down" android:drawablePadding="4dp"/>
