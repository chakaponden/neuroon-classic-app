            <View android:id="@+id/divider1" style="@style/DrawerMenuDivider"/>
            <RelativeLayout android:id="@+id/one_day_alarm" android:background="@drawable/drawer_menu_item" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="4dp" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="4dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/one_day_alarm_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/alarm_maly" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
