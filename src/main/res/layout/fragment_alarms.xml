                <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/text_normal_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/set_your_personal_biorhythm_nand_keep_it" android:layout_toRightOf="@+id/biorhythm_icon" android:layout_below="@+id/biorhythm_title" android:lineSpacingExtra="4dp"/>
