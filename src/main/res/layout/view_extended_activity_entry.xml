<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/event_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/belka_sen_dluga"/>
    <ImageView android:id="@+id/event_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@drawable/sleep_feed" android:layout_toRightOf="@+id/event_bar"/>
    <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/blue_3054FA" android:id="@+id/event_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/sleep" android:layout_toRightOf="@+id/event_icon"/>
    <com.inteliclinic.neuroon.views.ThinTextView android:textColor="@color/grey_8e" android:id="@+id/event_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/event_icon" android:layout_below="@+id/event_title"/>
    <RelativeLayout android:gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_toRightOf="@+id/event_bar" android:layout_below="@+id/event_time" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/event_extended_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/belka_sen"/>
        <ImageView android:id="@+id/event_extended_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@drawable/sleep_feed" android:layout_toRightOf="@+id/event_extended_bar"/>
        <com.inteliclinic.neuroon.views.LightTextView android:textColor="@color/blue_3054FA" android:id="@+id/event_extended_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/event_extended_icon"/>
        <com.inteliclinic.neuroon.views.ThinTextView android:textColor="@color/grey_8e" android:id="@+id/event_extended_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/event_extended_icon" android:layout_below="@+id/event_extended_title"/>
    </RelativeLayout>
</merge>
