<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:id="@+id/nap_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp"/>
    <com.inteliclinic.neuroon.views.BoldTextView android:textColor="@color/violet_544B85" android:id="@+id/nap_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="" android:layout_toRightOf="@+id/nap_image" android:layout_alignTop="@+id/nap_image"/>
    <com.inteliclinic.neuroon.views.ThinTextView android:textColor="@color/grey_8e" android:id="@+id/nap_best_take" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/between_colon" android:layout_toRightOf="@+id/nap_image" android:layout_below="@+id/nap_title"/>
