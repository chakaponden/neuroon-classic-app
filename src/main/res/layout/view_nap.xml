        <com.inteliclinic.neuroon.views.ThinTextView android:textSize="20sp" android:textColor="@color/violet_544B85" android:id="@+id/nap_time_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/min"/>
